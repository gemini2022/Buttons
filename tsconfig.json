/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "paths": {
      "button-base": [
        "./dist/button-base"
      ],
      "icon-button-base": [
        "./dist/icon-button-base"
      ],
      "primary-button-directive": [
        "./dist/primary-button-directive"
      ],
      "primary-icon-button-directive": [
        "./dist/primary-icon-button-directive"
      ],
      "quaternary-button": [
        "./dist/quaternary-button"
      ],
      "quaternary-button-directive": [
        "./dist/quaternary-button-directive"
      ],
      "quaternary-icon-button-directive": [
        "./dist/quaternary-icon-button-directive"
      ],
      "secondary-button-directive": [
        "./dist/secondary-button-directive"
      ],
      "secondary-icon-button-directive": [
        "./dist/secondary-icon-button-directive"
      ],
      "tertiary-button-directive": [
        "./dist/tertiary-button-directive"
      ],
      "tertiary-icon-button-directive": [
        "./dist/tertiary-icon-button-directive"
      ],
      "text-button-base": [
        "./dist/text-button-base"
      ]
    },
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
